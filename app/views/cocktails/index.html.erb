<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1436018626274-89acd1d6ec9d?ixlib=rb-0.3.5&s=0baf60ba213c0c507b085112b60ea8c5&auto=format&fit=crop&w=1267&q=80');">
  <div class="banner-content">
    <h1>Michel's cocktails</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <a href="#cocktail-list" class="btn-orange-lg">View cocktails</a>
  </div>
</div>
<div class="container">
  <div class="row" id="cocktail-list">
    <% @cocktails.each do |cocktail| %>

        <div class="col-xs-12 col-sm-4">
           <% if cocktail.photo.present? %>
            <%= link_to cocktail_path(cocktail), class: "card" do  %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
                <div class="card-category">Popular</div>
                <div class="card-description">
                  <h2><%= cocktail.name %></h2>
                  <p><%= link_to "More details", cocktail_path(cocktail) %></p>
                </div>
              </div>
            <% end %>
          <% else %>
            <%= link_to cocktail_path(cocktail), class: "card" do %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path("ash-edmonds-491883-unsplash.jpg", height: 200, width: 200, crop: :fill) %>');">
                <div class="card-category">Popular</div>
                <div class="card-description">
                  <h2><%= cocktail.name %></h2>
                  <p><%= link_to "More details", cocktail_path(cocktail) %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

    <% end %>
  </div>
</div>








