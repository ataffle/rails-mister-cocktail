<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
    <h1>Michel's cocktails</h1>
    <p>Merci qui ?</p>
    <a href="#cocktail-list" class="btn btn-primary btn-lg">View cocktails</a>
  </div>
</div>
<div class="container">
  <ul id="cocktail-list">
    <% @cocktails.each do |cocktail| %>
    <li>
      <% if cocktail.photo.present? %>
        <%= cl_image_tag cocktail.photo, height: 200, width: 200, crop: :fill %> <br>
      <% else %>
        <%= image_tag "cocktail_placeholder.jpg", height: 200, width: 200 %>
      <% end %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %> <br>
    </li> <br>

    <% end %>
  </ul>
</div>


